{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start PlantUML Server",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/start-plantuml-server.sh",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": []
    },
    {
      "label": "Stop PlantUML Server",
      "type": "shell",
      "command": "docker-compose",
      "args": ["-f", "docker-compose.plantuml.yml", "down"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "PlantUML Performance Test",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/plantuml-performance.sh",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}